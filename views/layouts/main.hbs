    {{! Icon & Title }}
    <title>Hotel California</title>
    <link rel="icon" href="/imgs/hotel-title.png" />
  </head>

  <style>
    body { background-image: url("/imgs/hero1.jpg"); background-size: cover;
    background-repeat: no-repeat; background-position: center; }
  </style>

  <body>

    <div class="container-fluid m-0 p-0">
      {{! Navbar }}
      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
          <!-- Company name and logo -->
          <a class="navbar-brand" href="/">
            <img
              src="/imgs/hotel-logo.png"
              alt="Hotel California"
              height="60"
            />
          </a>

          <!-- Hamburger Btn -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarToggler"
            aria-controls="navbarToggler"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Navbar Btns -->
          <div
            class="collapse navbar-collapse d-flex justify-content-end"
            id="navbarToggler"
          >
            <ul class="navbar-nav mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" href="/reservations">Manage Reservations</a>
              </li>
              <li class="nav-item">
                {{#if session.email}}
                  <a class="nav-link" href="/logout">Logout</a>
                {{else}}
                  <a class="nav-link" href="/register">Join</a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
      </nav>

      {{! Body }}
      {{{body}}}

      {{! Footer }}
      <footer
        class="text-white text-center text-lg-start"
        style="background-color: #23242a;"
      >
        <!-- Grid container -->
        <div class="container p-4">
          <!--Grid row-->
          <div class="row mt-4">
            <!--About Us-->
            <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
              <h5 class="text-uppercase mb-4 text-white">Who We Are</h5>

              <p class="text-white">
                Hotel California offers a luxurious guest experience with
                exceptional service, elegant accommodations, and world-class
                amenities. We create a welcoming environment that inspires
                relaxation and well-being. Our goal is to create unforgettable
                memories for every guest, leaving them feeling pampered,
                satisfied, and eager to return.
              </p>

              <div class="mt-4">
                <!-- TikTok -->
                <a type="button" class="btn btn-floating btn-warning btn-lg"><i
                    class="fab fa-tiktok"
                  ></i>
                </a>
                <!-- Twitter -->
                <a type="button" class="btn btn-floating btn-warning btn-lg"><i
                    class="fab fa-twitter"
                  ></i>
                </a>
                <!-- Instagram -->
                <a type="button" class="btn btn-floating btn-warning btn-lg"><i
                    class="fab fa-instagram"
                  ></i>
                </a>
                <!-- Facebook -->
                <a type="button" class="btn btn-floating btn-warning btn-lg"><i
                    class="fab fa-facebook-f"
                  ></i>
                </a>
                <!-- Pinterest -->
                <a type="button" class="btn btn-floating btn-warning btn-lg"><i
                    class="fab fa-pinterest"
                  ></i>
                </a>
              </div>
            </div>

            <!--Contact Us-->
            <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
              <h5 class="text-uppercase mb-4 text-white">Get in Touch</h5>

              <ul class="fa-ul" style="margin-left: 1.65em;">
                <li class="mb-3">
                  <span class="fa-li"><i class="fas fa-home"></i></span><span
                    class="ms-2"
                  >922 Sunset Boulevard, Beverly Hills</span>
                </li>
                <li class="mb-3">
                  <span class="fa-li"><i
                      class="fas fa-envelope"
                    ></i></span><span class="ms-2">california@hotel.com</span>
                </li>
                <li class="mb-3">
                  <span class="fa-li"><i class="fas fa-phone"></i></span><span
                    class="ms-2"
                  >+ 01 310 934 7662</span>
                </li>
              </ul>
            </div>

            <!--Opening Hours-->
            <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
              <h5 class="text-uppercase mb-4 text-white">Opening hours</h5>

              <table class="table text-center text-white">
                <tbody class="font-weight-normal">
                  <tr>
                    <td>Mon - Thu:</td>
                    <td>8am - 9pm</td>
                  </tr>
                  <tr>
                    <td>Fri - Sat:</td>
                    <td>8am - 1am</td>
                  </tr>
                  <tr>
                    <td>Sunday:</td>
                    <td>9am - 10pm</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Copyright -->
        <div
          class="text-center p-3"
          style="background-color: rgba(0, 0, 0, 0.2);"
        >
          Â© 2023 Copyright:
          <a class="text-white" href="/">Hotel California, Inc</a>
        </div>
      </footer>
    </div>

    <script>
      $(document).ready(function() {
        toastr.options = {
          closeButton: true,
          debug: false,
          progressBar: true,
          positionClass: "toast-top-right",
          preventDuplicates: true,
          timeOut: 3000,
          extendedTimeOut: 1000,
          closeMethod = 'fadeOut',
          closeDuration = 300,
          closeEasing: "swing",
        };
      });
    </script>
    
  </body>

</html>