{{! Hotel Cali Description }}
<div class="section mb-4">
  <h3>
    <a href="/">
      <img
        src="/imgs/hotel-logo-login.png"
        alt="Hotel California"
        height="80"
      />
    </a>
  </h3>
  {{! <p class="lead">Sign Up To Get Started</p> }}
</div>

{{! Divider }}
<hr class="hr mb-4 mt-4" />

{{! Register Form }}
<div class="section mb-4">
  <form class="register-form" action="/register" method="POST">

    {{! First and Last Name }}
    <div class="row">
      <div class="col-md-6">
        {{! First Name }}
        <div class="form-group">
          <label for="InputFirstName">First Name</label>
          <input
            type="firstname"
            class="form-control"
            id="InputFirstName"
            name="firstname"
            placeholder="First Name"
            required
          />
        </div>
      </div>

      <div class="col-md-6">
        {{! Last Name }}
        <div class="form-group">
          <label for="InputLastName">Last Name</label>
          <input
            type="lastname"
            class="form-control"
            id="InputLastName"
            name="lastname"
            placeholder="Last Name"
            required
          />
        </div>
      </div>

    </div>

    {{! Email }}
    <div class="form-group">
      <label for="InputEmail">Email address</label>
      <input
        type="email"
        class="form-control"
        id="InputEmail"
        aria-describedby="emailHelp"
        placeholder="Enter email"
        name="email"
        required
      />

    </div>

    {{! Phone Number }}
    <div class="form-group">
      <label for="InputPhoneNumber">Phone Number</label>
      <input
        type="phonenumber"
        class="form-control"
        id="InputPhoneNumber"
        name="phonenumber"
        placeholder="Phone Number"
        required
      />
    </div>

    {{! Passwords }}
    <div class="row">
      <div class="col-md-6">
        {{! Password }}
        <div class="form-group">
          <label for="InputPassword1">Password</label>
          <input
            type="password"
            class="form-control"
            id="InputPassword1"
            name="password1"
            placeholder="Password"
            required
          />
        </div>
      </div>

      <div class="col-md-6">
        {{! Re-enter Password }}
        <div class="form-group">
          <label for="InputPassword2">Re-enter Password</label>
          <input
            type="password"
            class="form-control"
            id="InputPassword2"
            name="password2"
            placeholder="Password"
            required
          />
        </div>
      </div>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
  </form>
</div>

{{! Footer }}
<footer class="footer">
  <p class="text-center">
    Already have an account?
    <a href="/login">Login</a>
  </p>
  {{! Copyright }}
  <p class="text-center">
    &copy; 2023 Hotel California Inc.
  </p>
</footer>